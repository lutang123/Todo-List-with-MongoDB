<%- include("partials/header") -%>

  <div class="box" id="heading">
    <h1> <%=title%> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(item) { %>
    <form action="/deleted" method="post">
      <div class="item">
        <input type="checkbox" name="deletedItem" value="<%=item.name%>" onchange="this.form.submit()">
        <p><%=item.name%></p>
        <!-- hidden input is just a way to tap into the value when we submit and post to /deleted -->
        <input type="hidden" name="hidden" value="<%=title%>"></input>
      </div>
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="button" value=<%=title%>> + </button>
    </form>

  </div>

  <div class="box goDream">
    <!-- <form action="/dream" method="post"> -->
      <h1 class="h1_dream"> Go to Dream List <button onclick="location.href='/dream'" class="goButton" type="button"> → </button></h1>
  <!-- </form> -->
  </div>

  <div class="box goDream">
    <!-- <form action="/dream" method="post"> -->
      <h1 class="h1_dream"> Go to Completed List <button onclick="location.href='/deleted'" class="goButton_completed" type="button"> → </button></h1>
  <!-- </form> -->
  </div>

<%- include("partials/footer") -%>


